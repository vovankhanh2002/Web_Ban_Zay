
@using PagedList.Mvc;
@using PagedList;
@model IPagedList<Web_Shop_Zay.Models.San_Pham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAmin.cshtml";
}

<p>
    @Html.ActionLink("Add Sản Phẩm", "AddSanPham")
</p>
<table class="table" style="width:700px;hight:32px">
    <tr>
        <th style="width:100px;hight:100px">
            Mã sản phẩm
        </th>
        <th style="width: 100px; hight: 100px">
            Mã phân loại
        </th>
        <th style="width: 100px; hight: 100px">
            Tên sản phẩm
        </th>
        <th style="width: 100px; hight: 100px">
            Mô tả
        </th>
        <th style="width: 100px; hight: 100px">
            Số lượng
        </th>
        <th style="width: 100px; hight: 100px">
            Giá
        </th>
        <th style="width: 100px; hight: 100px">
            Hình
        </th>
        <th style="width: 100px; hight: 100px">
            Trạng thái
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaPL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                <a href="~/Admin/SanPham/EditSanPham?id=@item.MaSP">Edit</a> |
                <a href="~/Admin/SanPham/DeleteSanPham?id=@item.MaSP" onclick="showSuccessToast()">Delete</a> |
            </td>
        </tr>
    }
    <!-- Kết thúc -->
</table>

<br />
<div style="margin-right:50px">
    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))
</div>



