
@using PagedList.Mvc;
@using PagedList;
@model IPagedList<Web_Shop_Zay.Models.Khach_Hang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAmin.cshtml";
}


<div class="main-content">
    <div class="row ">
        <div class="col-lg-7 col-md-12">
            <div class="card" style="min-height: 485px">
                <div class="card-header card-header-text">
                    <h4 class="card-title">Thông tin khách hàng</h4>
                    <a href="~/Admin/KhachHang/AddKhachhang" class="btn btn-primary mt-3">Thêm</a>
                     <form action="Index" method="post" style="margin-top:20px">
                        <label for="lang-select">Bạn muốn tìm theo mã khách hàng:</label>
                        <select name="select" required id="lang-select" style="height: 45px; border-radius: 5px;">
                            <option value="IDKhachHang" @Session["seleted"]>Id khách hàng</option>
                            <option value="HoTenKH" @Session["seleted1"]>Ho tên</option>
                            <option value="DiaChi" @Session["seleted2"]>Địa chỉ</option>
                            <option value="Email" @Session["seleted3"]>Email</option>
                            <option value="DienThoai" @Session["seleted4"]>Số điện thoại</option>
                            <option value="GioiTinh" @Session["seleted5"]>Giới tính</option>
                        </select>
                        <input required type="text" name="searchString" value="" style="height: 45px; border-radius: 5px;" placeholder="Tìm kiếm">
                        <button type="submit" class="btn btn-success btn-lg px-3">Tìm kiếm</button>
                    </form>
                </div>

                <div class="card-content table-responsive">
                    <table class="table table-hover">
                        <thead class="text-primary">
                            <tr>
                                <th>Mã khách hàng</th>
                                <th>Họ tên</th>
                                <th>Địa chỉ</th>
                                <th>Email</th>
                                <th>Điện thoại</th>
                                <th>Giới tính</th>
                                <th>Mật khẩu</th>
                                <th>Mật khẩu nhập lại</th>
                                <th>Ảnh</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.IDKhachHang</td>
                                    <td>@item.HoTenKH</td>
                                    <td>@item.DiaChi</td>
                                    <td>@item.Email</td>
                                    <td>@item.DienThoai</td>
                                    <td>@item.GioiTinh</td>
                                    <td>@item.MatKhau</td>
                                    <td>@item.ReMatKhau</td>
                                    <td><img src="~/Asset/img/KhachHang/@item.Anh" style="max-width:50px"></td>
                                    <td>
                                        <a href="~/Admin/KhachHang/EditKhachHang?id=@item.IDKhachHang" class="btn btn-primary mt-3"><i class="material-icons">edit</i> Sửa</a>
                                        <a href="~/Admin/KhachHang/DeleteKhachHang?id=@item.IDKhachHang" class="btn btn-danger mt-3"><i class="material-icons ">delete_outline</i> Xóa</a>

                                    </td>
                                </tr>
                            }
                            <!-- Kết thúc -->
                            @Html.PagedListPager(Model, page => Url.Action("Index",
                            new { page }))
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
