@model Web_Shop_Zay.Models.ChiTietSp
@{
    ViewBag.Title = "Thêm chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAmin.cshtml";
}


<div class="container py-5">
    <div class="row py-5">
        <form class="col-md-9 m-auto" action="AddChiTietSP" method="post" role="form">
            <h1>@ViewBag.Title</h1>
            <div class="row">
                <div class="form-group col-md-9 mb-3">
                    <label for=""><strong>Mã sản phẩm</strong></label>
                    <input type="text" class="form-control mt-1" id="name" value="@Session["mssp"]" name="MaSP" placeholder="Nhập mã sản phẩm">
                </div>
                <div class="form-group col-md-9 mb-3">
                    <label for=""><strong>Upload ảnh 1</strong></label>
                    <input type="file" class="form-control mt-1" id="pic" name="Hinh1" placeholder="Anh 1">

                </div>
                <div class="form-group col-md-9 mb-3">
                    <label for=""><strong>Upload ảnh 2</strong></label>
                    <input type="file" class="form-control mt-1" id="pic" name="Hinh2" placeholder="Anh 2">

                </div>
                <div class="form-group col-md-9 mb-3">
                    <label for=""><strong>Upload ảnh 3</strong></label>
                    <input type="file" class="form-control mt-1" id="pic" name="Hinh3" placeholder="Anh 3">

                </div>
                <div class="form-group col-md-9 mb-3">
                    <label for=""><strong>Upload ảnh 4</strong></label>
                    <input type="file" class="form-control mt-1" id="pic" name="Hinh4" placeholder="Anh 4">

                </div>
            </div>
            <div class="row">
                <div class="col text-end mt-2">
                    <button type="submit" class="btn btn-success btn-lg px-3">Thêm chi tiết sản phẩm</button>
                </div>
            </div>
        </form>
    </div>
</div>



