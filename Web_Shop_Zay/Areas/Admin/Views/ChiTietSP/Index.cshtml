
@using PagedList.Mvc;
@using PagedList;
@model IPagedList<Web_Shop_Zay.Models.ChiTietSp>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAmin.cshtml";
}
<p>
    @Html.ActionLink("Add chi tiết sản phẩm", "AddChiTietSP")
</p>
<table class="table" style="width:700px;hight:32px">
    <tr>
        <th style="width:100px;hight:100px">
            Mã chi tiết sản phẩm
        </th>
        <th style="width:100px;hight:100px">
            Mã sản phẩm
        </th>
        <th style="width:100px;hight:100px">
            Hình 1
        </th>
        <th style="width:100px;hight:100px">
            Hình 2
        </th>
        <th style="width:100px;hight:100px">
            Hình 3
        </th>
        <th style="width:100px;hight:100px">
            Hình 4
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaChiTietSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>
            <td>
                <img src="~/Asset/img/ChiTietSP/@item.Hinh1">
            </td>
            <td>
                <img src="~/Asset/img/ChiTietSP/@item.Hinh2">
            </td>
            <td>
                <img src="~/Asset/img/ChiTietSP/@item.Hinh3">
            </td>
            <td>
                <img src="~/Asset/img/ChiTietSP/@item.Hinh4">
            </td>
            <td>
                <a href="~/Admin/ChiTietSP/EditChiTietSP?id=@item.MaChiTietSP">Edit</a> |
                <a href="~/Admin/ChiTietSP/DeleteChiTietsp?id=@item.MaChiTietSP" onclick="showSuccessToast()">Delete</a> |
            </td>
        </tr>
    }

</table>

<br />
<div style="margin-right:50px">
    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))
</div>
