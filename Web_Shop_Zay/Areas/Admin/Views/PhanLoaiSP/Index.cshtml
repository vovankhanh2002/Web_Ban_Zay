@using PagedList.Mvc;
@using PagedList;
@model IPagedList<Web_Shop_Zay.Models.Phan_Loai_SP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAmin.cshtml";
}

<p>
    @Html.ActionLink("Add phân loại sản phẩm", "AddPhanLoaiSP")
</p>
<table class="table" style="width:700px;hight:300px">
    <tr >
        <th style="width:100px">
            Mã phân loại
        </th>
        <th style="width:100px">
            Mã loại
        </th>
        <th style="width:100px">
            Tên phân loại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaPL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenPL)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                <a href="~/Admin/PhanLoaiSP/EditPhanLoai?id=@item.MaPL">Edit</a>
                <a href="~/Admin/PhanLoaiSP/DeletePhanLoaiSP?id=@item.MaPL" onclick="showSuccessToast()">Delete</a>
            </td>
        </tr>
    }
    <!-- Kết thúc -->
</table>

<br/>
<div style="margin-right:50px">
    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))
    </div>

