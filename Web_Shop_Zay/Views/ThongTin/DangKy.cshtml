@model Web_Shop_Zay.Models.Khach_Hang
@{
    ViewBag.Title = "AddKhachHang";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container" style="margin-top:20px">
    <div class="biglogin">

        <div class="bodysignup">

            <div class="login shadow-lg p-3 mb-5 rounded-4 ">

                <h1 class="text-center">Tạo tài khoản</h1>
                <p class="text-center">Hãy điền đầy đủ thông tin bên dưới để đăng ký tài khoản</p>

                <form class="" action="DangKy" method="post">

                    <!-- tao cac thanh phan dang ky -->
                    <div class="form-group">
                        <label class="form-label fw-bold" for="text">Tên của bạn</label>
                        <input class="form-control" type="text" id="username" placeholder="Nhập tên của bạn" name="HoTenKH" required>
                        <!-- <div class="invalid-feedback fs-6">
                            Vui lòng nhập tên của bạn
                        </div> -->
                    </div>

                    <div class="form-group mt-3">
                        <label class="form-label fw-bold" for="Email">Email</label>
                        <input class="form-control" type="email" id="email" placeholder="Nhập Email của bạn" name="Email" required>
                        <!-- <div class="invalid-feedback fs-6">
                            Vui lòng nhập địa chỉ Email!
                        </div> -->
                    </div>

                    <div class="form-group mt-3">
                        <label class="form-label fw-bold" for="DiaChi">Địa chỉ</label>
                        <input class="form-control" type="text" id="DiaChi" placeholder="Nhập địa chỉ của bạn" name="DiaChi" required>
                        <!-- <div class="invalid-feedback fs-6">
                            Vui lòng nhập địa chỉ Email!
                        </div> -->
                    </div>

                    <div class="form-group mt-3">
                        <label class="form-label fw-bold" for="DienThoai">Điện thoại</label>
                        <input class="form-control" type="number" id="DienThoai" placeholder="Nhập số điện của bạn" name="DienThoai" required>
                        <!-- <div class="invalid-feedback fs-6">
                            Vui lòng nhập địa chỉ Email!
                        </div> -->
                    </div>

                    <div class="form-group mt-3">
                        <label class="form-label fw-bold" for="password">Mật khẩu</label>
                        <input class="form-control" type="password" id="password" placeholder="Nhập mật khẩu" name="MatKhau" required>
                        <span id="passwordLength"></span>
                        <!-- <div class="invalid-feedback fs-6">
                            Vui lòng nhập mật khẩu!
                        </div> -->
                    </div>

                    <div class="form-group mt-3">
                        <label class="form-label fw-bold" for="password">Nhập lại mật khẩu</label>
                        <input class="form-control" type="password" id="confirmPassword" placeholder="Nhập lại mật khẩu" name="ReMatKhau" required>
                        <span id="passwordMatch"></span>
                    </div>
                    <!-- <div class="invalid-feedback fs-6">
                        Vui lòng nhập lại mật khẩu
                    </div> -->
                    <!-- <div class="input-group mb-5 mt-3 d-flex justify-content-between">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="check">
                            <label class="form-check-label" for="check">Ghi nhớ đăng nhập</label>
                        </div>
                        <div class="forgot">
                            <small><a href="#" style="text-decoration: none;">Quên mật khẩu?</a></small>
                        </div>
                    </div> -->
                    <!-- tao nut dang ky -->
                    <div class="input-group mb-3 mt-5">
                        <button class="btn btn-lg btn-success w-100 fs-6">Đăng ký</button>
                        <!-- <input class="btn btn-success w-100" type="submit" value="Đăng Nhập"> -->
                    </div>

                    <!-- <div class="Google input-group mb-3">
                        <button class="btn btn-lg w-100 fs-6"> <img src="assets/img/google.png" style="width: 20px;" class="me-2" alt="#"><small>Đăng nhập bằng Google</small></button>
                    </div> -->
                    <!-- chi den phan dang nhap -->
                    <div class="new">
                        <small style="font-size: 15px;">Bạn đã có tài khoản?<a href="~/ThongTin/DangNhap" style="text-decoration: none;"> Đăng nhập</a></small>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>