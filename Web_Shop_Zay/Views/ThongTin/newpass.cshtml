@model Web_Shop_Zay.Models.Khach_Hang
@{
    ViewBag.Title = "newpass";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container" style="margin-top:20px;width:400px">
    <div class="bodylogin">

        <div class="login shadow-lg p-3 mb-5  rounded-4 ">

            <h1 class="text-center">Xin chào</h1>
            <p class="text-center">Thay đổi mật khẩu của bạn</p>
          
        
            <form class="need-validation" action="newpass" method="post">
                <input name="email" type="hidden" value="@Model.Email">
                <!-- can xac thuc -->
                <!-- tao email & password -->
                <div class="form-group was-validated ">
                    <!--da xac thuc -->
                    <label class="form-label fw-bold" for="email">Mật khẩu mới</label>
                    <input class="form-control" type="password" id="email" placeholder="" name="MatKhau" required maxlength="20">
                    <div class="invalid-feedback fs-6">
                        Vui lòng nhập mật khẩu!
                    </div>
                </div>

                <div class="form-group was-validated mt-3">
                    <!--da xac thuc -->
                    <label class="form-label fw-bold" for="password">Nhập lại mật khẩu mới</label>
                    <input class="form-control" type="password" id="password" placeholder="" name="ReMatKhau" required maxlength="20">
                    <div class="invalid-feedback fs-6">
                        Vui lòng nhập lại mật khẩu!
                    </div>
                </div>
                <div class="input-group mb-3">
                    <button class="btn btn-lg btn-success w-100 fs-6">Đăng nhập</button>
                    <!-- <input class="btn btn-success w-100" type="submit" value="Đăng Nhập"> -->
                </div>

           

            </form>

        </div>
    </div>
</div>

