@using PagedList;
@using PagedList.Mvc
@model IPagedList<Web_Shop_Zay.Models.San_Pham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    var loai = new Web_Shop_Zay.Models.mapLoaiSP().LoaiSP();
}
<div class="modal fade bg-white" id="templatemo_search" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="w-100 pt-1 mb-5 text-right">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="" method="get" class="modal-content modal-body border-0 p-0">
            <div class="input-group mb-2">
                <input type="text" class="form-control" id="inputModalSearch" name="q" placeholder="Search ...">
                <button type="submit" class="input-group-text bg-success text-light">
                    <i class="fa fa-fw fa-search text-white"></i>
                </button>
            </div>
        </form>
    </div>
</div>
<!-- Start Content -->
<div class="container py-5">
    <div class="row">
        <div class="col-lg-3">
            <h1 class="h2 pb-4">Menu</h1>
            <ul class="list-unstyled templatemo-accordion">
                @foreach (var item in loai)
                {
                    var ds = new Web_Shop_Zay.Models.mapPhanLoaiSP().phanLoaiSpID(item.MaLoai);
                    <li class="pb-3">
                        <a class="collapsed d-flex justify-content-between h3 text-decoration-none">
                            @item.TenLoai
                            <i class="fa fa-fw fa-chevron-circle-down mt-1"></i>
                        </a>
                        <ul class="collapse show list-unstyled pl-3">
                            @foreach (var i in ds)
                            {
                                <li><a class="text-decoration-none" style="color:red" href="~/Shop/SanPhamID?id=@i.MaPL"> @i.TenPL</a></li>

                            }

                        </ul>
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="col-lg-9">
        <div class="row">
            <div class="col-md-2">
                <ul class="list-inline shop-top-menu pb-3 pt-1">
                    <li class="list-inline-item">
                        <a class="h3 text-dark text-decoration-none mr-3" href="~/Shop/Index">All</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-2 pb-4">
                <div class="d-flex">
                    <select class="form-control">
                        <option>Featured</option>
                        <option>A to Z</option>
                        <option>Item</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row" style="width: 900px; margin-left: 36%; margin-top: -34%; ">
            @foreach (var item in Model)
            {<div class="col-md-4">
                    <div class="card mb-4 product-wap rounded-0">
                        <div class="card rounded-0">
                            <img class="card-img rounded-0 img-fluid" src="~/Asset/img/SanPham/@item.Hinh">
                            <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                <ul class="list-unstyled">

                                    <li><a class="btn btn-success text-white mt-2" href="#"><i class="far fa-eye"></i></a></li>
                                    <li><a class="btn btn-success text-white mt-2" href="~/Cart/AddSp?id=@item.MaSP"><i class="fas fa-cart-plus"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body">
                            <a href="#" class="h3 text-decoration-none">@item.TenSP</a>
                            <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                <li class="pt-2">
                                    <span class="product-color-dot color-dot-red float-left rounded-circle ml-1"></span>
                                    <span class="product-color-dot color-dot-blue float-left rounded-circle ml-1"></span>
                                    <span class="product-color-dot color-dot-black float-left rounded-circle ml-1"></span>
                                    <span class="product-color-dot color-dot-light float-left rounded-circle ml-1"></span>
                                    <span class="product-color-dot color-dot-green float-left rounded-circle ml-1"></span>
                                </li>
                            </ul>
                            <ul class="list-unstyled d-flex justify-content-center mb-1">
                                <li>
                                    @item.TrangThai
                                </li>
                            </ul>
                            <p class="text-center mb-0">@String.Format("{0:c}", item.Gia) </p>
                        </div>
                    </div>
                </div>
            }
            <br />
            <div style="margin-right:50px">
                @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page }))
            </div>
        </div>
    </div>
</div>
<!-- End Content -->
