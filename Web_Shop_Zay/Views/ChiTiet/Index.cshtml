@model Web_Shop_Zay.Models.San_Pham
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    var dsChiTiet = new Web_Shop_Zay.Models.mapChiTietSP().ChiTiet(Model.MaSP);
   
    var ds = (from result in new Web_Shop_Zay.Models.mapSanPham().SanPham()
              orderby Guid.NewGuid()
              select result).Take(8);
}

<div class="container" style="padding-top: 30px ;padding-bottom: 30px">
    <div class="card" style="padding-top: 30px; padding-bottom: 30px;border: none;">
        <div class="container">
            <div class="wrapper row">
                <div class="preview col-md-6">
                    <div class="preview-pic tab-content">
                        @**@<div class="slideshow-container">
                            <div class="mySlides fade">
                                <img src="~/Asset/img/ChiTietSP/@dsChiTiet.Hinh1" style="width:100%">
                                <div class="text"></div>
                            </div>

                            <div class="mySlides fade">
                                <img src="~/Asset/img/ChiTietSP/@dsChiTiet.Hinh2" style="width:100%">
                                <div class="text"></div>
                            </div>

                            <div class="mySlides fade">
                                <img src="~/Asset/img/ChiTietSP/@dsChiTiet.Hinh3" style="width:100%">
                                <div class="text"></div>
                            </div>
                            <div class="mySlides fade">
                                <img src="~/Asset/img/ChiTietSP/@dsChiTiet.Hinh4" style="width:100%">
                                <div class="text"></div>
                            </div>
                        </div>
                        <br>

                        <div style="text-align:center">
                            <span class="dot" onclick="currentSlide(0)"></span>
                            <span class="dot" onclick="currentSlide(1)"></span>
                            <span class="dot" onclick="currentSlide(2)"></span>
                            <span class="dot" onclick="currentSlide(3)"></span>
                        </div>
                        <div class="tab-pane" id="pic-2">
                            <img src="" alt="">
                        </div>
                    </div>
                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">@Model.TenSP</h3>
                    <p class="product-description">
                        @Model.MoTa
                    </p>
                    <h4 class="price">Giá bán: @String.Format("{0:c}", Model.Gia)</h4>
                    <p class="vote">
                        <strong>91%</strong> of người mua hài lòng với sản phẩm này <strong>(87 bình chọn)</strong>
                    </p>
                    <h5 class="sizes">Size: <span class="size">@Model.Size</span></h5>
                    <div class="action">
                        <a href="~/Cart/AddSp?id=@Model.MaSP">Cho vao gio</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row" style="margin-top:40px">
        <h1>Sản phẩm nổi bật</h1>
        @foreach (var item in ds)
        {
            <div class="col-md-4" style=" width: 300px;">
                <div class="card mb-4 product-wap rounded-0">
                    <div class="card rounded-0">
                        <img style=" max-height: 200px;" class="card-img rounded-0 img-fluid" src="~/Asset/img/SanPham/@item.Hinh">
                        <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                            <ul class="list-unstyled">

                                <li><a class="btn btn-success text-white mt-2" href="~/ChiTiet/Index?id=@item.MaSP"><i class="far fa-eye"></i></a></li>
                                <li><a class="btn btn-success text-white mt-2" href="~/Cart/AddSp?id=@item.MaSP"><i class="fas fa-cart-plus"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <a href="#" class="h3 text-decoration-none">@item.TenSP</a>
                        <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                            <li class="pt-2">
                                <span class="product-color-dot color-dot-red float-left rounded-circle ml-1"></span>
                                <span class="product-color-dot color-dot-blue float-left rounded-circle ml-1"></span>
                                <span class="product-color-dot color-dot-black float-left rounded-circle ml-1"></span>
                                <span class="product-color-dot color-dot-light float-left rounded-circle ml-1"></span>
                                <span class="product-color-dot color-dot-green float-left rounded-circle ml-1"></span>
                            </li>
                        </ul>
                        <ul class="list-unstyled d-flex justify-content-center mb-1">
                            <li>
                                @item.TrangThai
                            </li>
                        </ul>
                        <p class="text-center mb-0">@String.Format("{0:c}", item.Gia) </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

