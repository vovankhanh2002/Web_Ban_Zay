@model Web_Shop_Zay.Models.Chi_Tiet_HD
@{
    ViewBag.Title = "ChiTietHD";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    var idkhachhang = Session["idkhachhang"];
    var khachhang = new Web_Shop_Zay.Models.mapKhachHang();
    var dskhachhang = khachhang.khach_Hang().SingleOrDefault(m => m.IDKhachHang == (int)Session["idkhachhang"]);
    var sanpham = new Web_Shop_Zay.Models.mapSanPham();
    var idsanpham = Session["idsanpham"];
    var dssanpham = sanpham.SanPham().SingleOrDefault(m => m.MaSP ==(int)idsanpham);
}
<div class="container" style="margin-top:20px">
    <div class="biglogin">

        <div class="bodysignup">

            <div class="login shadow-lg p-3 mb-5 rounded-4 ">

                <h1 class="text-center">Thông tin khách hàng</h1>
                <div>
                    Tên sản phẩm: @dssanpham.TenSP
                </div>
                <div>
                    Hình: @dssanpham.Hinh
                </div>
                <div>
                    Giá: @dssanpham.Gia
                </div>
                <div>
                    Số lượng: @Session["slo"]
                </div>
                <div>
                    Họ tên: @dskhachhang.HoTenKH
                </div>
                <div>
                    Địa chỉ: @dskhachhang.DiaChi
                </div>
                <div>
                    Số điện thoại: @dskhachhang.DienThoai
                </div>
                <div>
                    Tổng tiền: @Session["sum"]
                </div>
                <form style="margin-top:20px" class="" action="ChiTietHD" method="post">
                    <input type="hidden" name="MaHD" value="@Session["mahd"]">
                    <!-- tao cac thanh phan dang ky -->
                    <input type="hidden" name="MaSP" value="@idsanpham">
                    <input type="hidden" name="SoLuong" value="@Session["slo"]">
                    <input type="hidden" name="TongTien" value="@Session["sum"]">
                    <button class="btn btn-lg btn-success w-100 fs-6">Hoàn tất</button>
                </form>
            </div>
        </div>
    </div>
</div>





